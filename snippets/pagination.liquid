{% if pagination.pages > 0 %}
      <nav role="navigation" class="flex justify-center my-8">
            {% if pagination.previous %}
                  <a class="px-8 py-3 mx-1 font-medium text-gray-600 border border-gray-600 rounded-sm hover:bg-gray-600 hover:text-white" href="{{ pagination.previous.url }}">{{ pagination.previous.title }}</a>
            {% endif %}
            {% for part in pagination.parts %}
                  {% if part.is_link %}
                        <a class="px-8 py-3 mx-1 font-medium text-gray-600 border border-gray-600 rounded-sm hover:bg-gray-600 hover:text-white" href="{{ part.url }}">{{ part.title }}</a>
                  {% else %}
                        <span class="px-8 py-3 mx-1 font-medium text-white bg-gray-600 border border-gray-600 rounded-sm">{{ part.title }}</span>
                  {% endif %}
            {% endfor %}
            {% if pagination.next %}
                  <a class="px-8 py-3 mx-1 font-medium text-gray-600 border border-gray-600 rounded-sm hover:bg-gray-600 hover:text-white" href="{{ pagination.next.url }}">{{ pagination.next.title }}</a>
            {% endif %}
      </nav>
{% endif %}